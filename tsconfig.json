{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "baseUrl": "./",
		"paths": {
			"src": ["./src"]
    },
    "lib": ["esnext", "DOM"],
    "types": ["cypress", "@testing-library/cypress"],
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true
  },
  "include": ["./src"],
  "exclude": ["**/node_modules", "**/.*/"],
}
